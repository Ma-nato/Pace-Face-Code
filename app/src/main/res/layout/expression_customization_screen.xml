<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"> <!-- 下部の余白を増やして切れを防止 -->

            <!-- 質問タイトル -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="どの表情に変更しますか？"
                android:textColor="@color/gray_800"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 表情選択カード -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/emojiCard"
                style="@style/Widget.PaceFace.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleText">

                <GridLayout
                    android:id="@+id/emojiGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:columnCount="3"
                    android:rowCount="3">

                    <ImageView
                        android:id="@+id/emoji1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/normal_expression" />

                    <ImageView
                        android:id="@+id/emoji2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/troubled_expression" />

                    <ImageView
                        android:id="@+id/emoji3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/impatient_expression" />

                    <ImageView
                        android:id="@+id/emoji4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/smile_expression" />

                    <ImageView
                        android:id="@+id/emoji5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/sad_expression" />

                    <ImageView
                        android:id="@+id/emoji6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/angry_expression" />

                    <ImageView
                        android:id="@+id/emoji7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/sleep_expression" />

                    <ImageView
                        android:id="@+id/emoji8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/wink_expression" />

                    <ImageView
                        android:id="@+id/emoji9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/smug_expression" />
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 変更ボタン -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/changeBtn"
                style="@style/Widget.Material3.Button"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="変更を保存"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emojiCard" />

            <!-- 自動変更設定カード -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/switchCard"
                style="@style/Widget.PaceFace.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/changeBtn">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/changeSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="表情の自動変更"
                        android:textColor="@color/gray_800"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/switchDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ONの場合、歩行速度に合わせて表情が変化します。\nOFFの場合、上で選択した表情に固定されます。"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Navigation Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_nav_container"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_button"
                app:tint="@color/nav_item_unselected" />

            <ImageButton
                android:id="@+id/passing_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/passing_button"
                app:tint="@color/nav_item_unselected" />

            <ImageButton
                android:id="@+id/history_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/history_button"
                app:tint="@color/nav_item_unselected" />

            <ImageButton
                android:id="@+id/emotion_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/emotion_button"
                app:tint="@color/colorPrimary" />

            <ImageButton
                android:id="@+id/gear_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gear_button"
                app:tint="@color/nav_item_unselected" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>